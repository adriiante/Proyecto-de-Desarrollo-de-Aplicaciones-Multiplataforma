<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/f1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/f1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:background="#00071D"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:background="#003F7A"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Botones de la toolbar2 -->
            <Button
                android:id="@+id/boton_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_btn"
                android:minWidth="100dp"
                android:padding="10dp"
                android:text="@string/formulas"
                android:textColor="@color/azul_p"
                android:textSize="16sp" />

            <Button
                android:id="@+id/boton_SP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_btn"
                android:minWidth="100dp"
                android:padding="10dp"
                android:text="Sport Cars"
                android:textColor="@color/azul_p"
                android:textSize="16sp" />

            <Button
                android:id="@+id/boton_motos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_btn"
                android:minWidth="100dp"
                android:padding="10dp"
                android:text="Motos"
                android:textColor="@color/azul_p"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/boton_rally"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_btn"
                android:minWidth="100dp"
                android:padding="10dp"
                android:text="Rally"
                android:textColor="@color/azul_p"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/boton_motos"
                app:layout_constraintTop_toTopOf="@id/boton_motos" />

            <Button
                android:id="@+id/boton_resistencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_btn"
                android:minWidth="100dp"
                android:padding="10dp"
                android:text="Resistencia"
                android:textColor="@color/azul_p"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/boton_rally"
                app:layout_constraintTop_toTopOf="@id/boton_rally" />

            <Button
                android:id="@+id/boton_karting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_btn"
                android:minWidth="100dp"
                android:padding="10dp"
                android:text="Karting"
                android:textColor="@color/azul_p"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/boton_resistencia"
                app:layout_constraintTop_toTopOf="@id/boton_resistencia" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_btn"
                android:minWidth="100dp"
                android:padding="10dp"
                android:text="Camiones"
                android:textColor="@color/azul_p"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/boton_karting"
                app:layout_constraintTop_toTopOf="@id/boton_karting" />

            <Button
                android:id="@+id/boton_drifting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_btn"
                android:minWidth="100dp"
                android:padding="10dp"
                android:text="Drifting"
                android:textColor="@color/azul_p"
                android:textSize="16sp" />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="389dp"
        android:layout_height="97dp"
        android:layout_marginTop="108dp"
        android:alpha="0.8"
        android:autoText="true"
        android:background="@drawable/rounded_tv"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:text="¡Descubre el emocionante mundo del automovilismo con la App de Inforace! 🏎️🏁 Encuentra una amplia variedad de categorías, sigue tus series favoritas y recibe notificaciones sobre eventos cercanos. ¡Explora y disfruta al máximo de las carreras"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="388dp"
        android:layout_height="85dp"
        android:alpha="0.8"
        android:autoText="true"
        android:background="@drawable/rounded_tv"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="Dentro de la App, accede a un menú horizontal para elegir tu categoría y serie favorita. Activa las notificaciones y encuentra enlaces a nuestras redes, ayuda y la página web de Inforace."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="@+id/f1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/f1" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="411dp"
        android:layout_height="70dp"
        android:layout_marginTop="52dp"
        android:background="@color/azul_p"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/boton_f4"
        android:layout_width="106dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_btn"
        android:text="Redes"
        android:textColor="@color/azul_p"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar4"
        app:layout_constraintEnd_toEndOf="@+id/toolbar4"
        app:strokeColor="@color/white" />

    <Button
        android:id="@+id/boton_f5"
        android:layout_width="129dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_btn"
        android:text="About us"
        android:textColor="@color/azul_p"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/boton_f4"
        app:layout_constraintStart_toEndOf="@+id/boton_f2"
        app:layout_constraintTop_toTopOf="@+id/toolbar4"
        app:strokeColor="@color/white" />

    <Button
        android:id="@+id/boton_f2"
        android:layout_width="113dp"
        android:layout_height="43dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_btn"
        android:text="Ayuda"
        android:textColor="@color/azul_p"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar4"
        app:strokeColor="@color/white" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="79dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="234dp"
        android:layout_height="87dp"
        android:src="@drawable/nforace"
        app:layout_constraintBottom_toTopOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
