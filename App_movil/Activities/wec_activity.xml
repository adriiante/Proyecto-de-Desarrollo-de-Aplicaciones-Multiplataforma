<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WECActivity">

    <!-- Fondo de imagen -->
    <ImageView
        android:id="@+id/imageViewBackgroundWEC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wec" />

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarWEC"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="#00071D"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenedor principal HorizontalScrollView -->

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="234dp"
        android:layout_height="87dp"
        android:src="@drawable/nforace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/toolbarWEC"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownId" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarWEC">

        <!-- LinearLayout principal -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="90dp">

            <!-- Sección de Bienvenida y Campeón Actual -->
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <!-- Descripción del WEC -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#003f7a"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:alpha="0.8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="Bienvenido a WEC"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="El Campeonato Mundial de Resistencia (WEC) es una categoría de automovilismo que incluye carreras de resistencia. Es conocida por sus carreras de larga duración como las 24 Horas de Le Mans."
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Campeón WEC -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="#DD003f7a"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"
                        android:text="Campeón Actual"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toyota Gazoo Racing ha sido coronado campeón del WEC, demostrando una excepcional capacidad de resistencia y habilidad técnica en las carreras de larga duración."
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="347dp"
                        android:layout_height="267dp"
                        android:alpha="2"
                        app:srcCompat="@drawable/tgr" />

                </LinearLayout>

            </LinearLayout>

            <!-- Título del Calendario y calendario programático -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="#003f7a"
                    android:padding="16dp"
                    android:text="Calendario 2024"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:alpha="0.8"/>

                <ScrollView
                    android:alpha="0.8"
                    android:layout_width="wrap_content"
                    android:layout_height="1000dp"
                    android:background="#003f7a"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/calendarLayoutWEC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Eventos del calendario -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="03/03 - 03/03: Sebring"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="30/03 - 30/03: Portimão"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="05/05 - 05/05: Spa-Francorchamps"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="10/06 - 10/06: Le Mans"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="07/07 - 07/07: Monza"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="15/09 - 15/09: Fuji"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="03/11 - 03/11: Bahrain"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />


                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
