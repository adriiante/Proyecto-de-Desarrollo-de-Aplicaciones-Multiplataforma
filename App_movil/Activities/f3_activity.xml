<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Fondo de imagen -->
    <ImageView
        android:id="@+id/f3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/f3" />

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="#00071D"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenedor principal HorizontalScrollView -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="234dp"
        android:layout_height="87dp"
        android:src="@drawable/nforace"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownId" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <!-- LinearLayout principal -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Sección de Bienvenida y Campeón Actual -->
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:layout_marginEnd="90dp">

                <!-- Descripción de la Fórmula 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#003f7a"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:alpha="0.8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="Bienvenido a Formula 3"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="La Fórmula 3 es una categoría de automovilismo que forma parte de la escalera hacia la Fórmula 1, proporcionando una plataforma competitiva para jóvenes talentos."
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Campeón Fórmula 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="#DD003f7a"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Campeón Actual"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:alpha="0.8"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Victor Martins es el actual campeón de la Fórmula 3, destacando por su consistencia y habilidades en la pista."
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="345dp"
                        android:layout_height="242dp"
                        android:alpha="2"
                        app:srcCompat="@drawable/gb" />

                </LinearLayout>

            </LinearLayout>

            <!-- Título del Calendario y calendario programático -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="#003f7a"
                    android:padding="16dp"
                    android:text="Calendario 2024"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:alpha="0.8"/>


                <ScrollView
                    android:alpha="0.8"
                    android:layout_width="wrap_content"
                    android:layout_height="1000dp"
                    android:background="#003f7a"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/calendarLayoutF3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <!-- Eventos del calendario -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="02/03 - 03/03: Bahrain"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="09/03 - 10/03: Jeddah"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="23/03 - 24/03: Melbourne"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="27/04 - 28/04: Imola"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="25/05 - 26/05: Monaco"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="01/06 - 02/06: Barcelona"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="22/06 - 23/06: Spielberg"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="29/06 - 30/06: Silverstone"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="06/07 - 07/07: Budapest"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="27/07 - 28/07: Spa-Francorchamps"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="03/08 - 04/08: Zandvoort"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="31/08 - 01/09: Monza"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="14/09 - 15/09: Sochi"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#003f7a"
                            android:padding="6dp"
                            android:text="30/11 - 01/12: Yas Marina"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />




                        <!-- Agrega más TextViews para cada evento del calendario aquí -->

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
